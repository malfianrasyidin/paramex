{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "declaration": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "**/*.stories.tsx",
    "src/app.tsx",
    "src/index.tsx",
    "src/setupTests.ts"
  ],
  "include": ["src"],
  "files": ["src/entry.ts"]
}
